#map 
  height 40%
  width 100%
  display block
  margin-top 20px

html, body 
  height 100%
  margin 0
  padding 0
  font-weight bold
  font-family sans-serif

#casaMarker
  height auto
  width auto

#casaTitle
  line-height 12px

#casaAddress
  line-height 5px

#casaLink
  color #c69670
  font-weight bold
  line-height 1px
  text-decoration underline

#casaArrow
  color #c69670